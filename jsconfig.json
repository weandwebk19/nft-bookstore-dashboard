{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@contexts/*": ["src/contexts/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
